{
  "version": 2,
  "functions": {
    "api/[...catchall].js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/(favicon\\.ico)$", "dest": "/$1" },
    { "src": "^/(style\\.css)$", "dest": "/$1" },
    { "src": "^/(og-image\\.png)$", "dest": "/$1" },
    { "src": "^(?!/api)(.*)$", "dest": "/api/[...catchall].js" }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  },
  "public": true
} 